# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_size = 4

[composer.json]
indent_size = 4

[*.yml]
indent_size = 4

[*.{neon,neon.dist}]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false
