    "check-node-version": "4.0.2",
    "core-js": "3.28.0",
    "coveralls": "3.0.2",
    "eslint": "6.8.0",
    "expect.js": "0.3.1",
    "grunt": "1.4.0",
    "grunt-browserify": "5.3.0",
    "grunt-contrib-clean": "1.1.0",
